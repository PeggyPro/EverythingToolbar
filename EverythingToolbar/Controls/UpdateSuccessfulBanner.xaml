<UserControl x:Class="EverythingToolbar.Controls.UpdateSuccessfulBanner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:properties="clr-namespace:EverythingToolbar.Properties"
             xmlns:controls="clr-namespace:EverythingToolbar.Controls"
             Background="Transparent"
             Loaded="OnLoaded"
             Visibility="Collapsed">
    <controls:GenericBanner x:Name="Banner"
                            Text="{x:Static properties:Resources.UpdateSuccessfulBannerText}"
                            BannerColor="#A8E6CF"
                            ButtonBorderBrush="#9bd5b8"
                            PrimaryButtonText="{x:Static properties:Resources.UpdateSuccessfulBannerDismiss}"
                            SecondaryButtonText="{x:Static properties:Resources.UpdateSuccessfulBannerDonate}"
                            PrimaryButtonClicked="OnDismissClicked"
                            SecondaryButtonClicked="OnDonateClicked" />
</UserControl>
